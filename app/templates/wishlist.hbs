<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Wish List</h1>
      <p class="lead text-muted">These are all of the movies that you have added to your Wish List</p>
      <p>
        <a>{{#link-to "movies" class="btn btn-primary my-2"}} All Movies {{/link-to}}</a>
